<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindIdPwdActivity">
    <TextView
    android:id="@+id/findId"
    android:text="아이디찾기"
    android:gravity="center"
    android:layout_width="84dp"
    android:layout_height="40dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_findId"
        android:text="이름"
        android:gravity="center"
        android:layout_width="84dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/findId"
        app:layout_constraintStart_toStartOf="@+id/findId"
        />
    <EditText
        android:id="@+id/et_name"
        android:hint="이름"
        android:layout_width="84dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/findId"
        app:layout_constraintLeft_toRightOf="@id/tv_findId"
        />
    <Button
        android:id="@+id/btn_pwd"
        android:text="찾기"
        android:layout_width="84dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/findPwd"
        app:layout_constraintLeft_toRightOf="@id/et_id"

        />


    <TextView
        android:id="@+id/findPwd"
        android:text="비밀번호찾기"
        android:gravity="center"
        android:layout_width="84dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_findId"/>
    <TextView
        android:id="@+id/tv_findPwd"
        android:text="아이디"
        android:gravity="center"
        android:layout_width="84dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/findPwd"
        app:layout_constraintStart_toStartOf="@+id/findId"
        />
    <EditText
        android:id="@+id/et_id"
        android:hint="아이디"
        android:layout_width="84dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/findPwd"
        app:layout_constraintLeft_toRightOf="@id/tv_findId"
        />
    <Button
        android:id="@+id/btn_id"
        android:text="찾기"
        android:layout_width="84dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/findId"
        app:layout_constraintLeft_toRightOf="@id/et_id"

        />

    <TextView

        android:text="결과"
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_findPwd"
        app:layout_constraintStart_toStartOf="@+id/findId"
        />
</androidx.constraintlayout.widget.ConstraintLayout>