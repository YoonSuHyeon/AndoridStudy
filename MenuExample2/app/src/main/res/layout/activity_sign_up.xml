<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">
    <TextView
        android:id="@+id/tv_tile"
        android:text="회원가입"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:gravity="center"
        android:id="@+id/tv_userId"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:text="아이디"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tile"
       />

    <EditText
        android:layout_marginTop="60dp"
        android:id="@+id/et_userId"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="72dp"
        app:layout_constraintLeft_toRightOf="@id/tv_userId"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tile" />

    <TextView
        android:id="@+id/tv_userPwd"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="36dp"
        android:text="비밀번호"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@id/tv_userId"
        app:layout_constraintTop_toBottomOf="@id/tv_userId" />

    <EditText
        android:id="@+id/et_userPwd"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:inputType="numberPassword"
        android:layout_marginTop="36dp"
        app:layout_constraintLeft_toRightOf="@id/tv_userPwd"
        app:layout_constraintTop_toBottomOf="@id/et_userId"
        app:layout_constraintStart_toStartOf="@id/et_userId"/>

    <TextView
        android:id="@+id/tv_userName"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="36dp"
        android:text="이름"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@id/tv_userPwd"
        app:layout_constraintTop_toBottomOf="@id/tv_userPwd" />

    <EditText
        android:id="@+id/et_userName"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="@id/et_userId"
        app:layout_constraintTop_toBottomOf="@id/et_userPwd"
        />

    <Button
        android:id="@+id/btn_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원 가입"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_userName" />


</androidx.constraintlayout.widget.ConstraintLayout>